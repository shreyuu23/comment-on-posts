<div class="section">
<%= form_for @post do |f| %>
  <div class="field">
    <div class="control">
	  <%= f.label :title %>
	  <%= f.text_field :title %>
    </div>
  </div>

  <div class="field">
    <div class="control">
     	<%= f.label :content %>
	   <%= f.text_field :content %>
    </div>
  </div>
  <%= f.submit 'Create new post', class: "button is-primary" %>
<% end %>
</div>

